{
  "$schema": "https://raw.githubusercontent.com/leeforge/schema/main/schema.json",
  "name": "ExampleEntity",
  "description": "A template for creating new entities",
  "softDelete": true,
  "ui": {
    "showReset": true,
    "submitText": "Save"
  },
  "properties": {
    "name": {
      "type": "string",
      "label": "Name",
      "validate": {
        "required": true,
        "maxLength": 100
      },
      "ui": {
        "span": 12,
        "placeholder": "Enter name"
      }
    }
  }
}
